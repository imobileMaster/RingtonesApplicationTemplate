<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout 
        android:id="@id/header2" 
        android:background="@drawable/fastblow_top_frame" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:layout_marginTop="10.0dip" />
    <ImageView 
        android:id="@id/arrow_up" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:src="@drawable/fastblow_arrow_up" />
    <HorizontalScrollView 
        android:id="@id/scroll" 
        android:background="#ff5197d8" 
        android:paddingLeft="3.0dip" android:scrollbars="none" 
        android:fadingEdgeLength="0.0dip" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:layout_below="@id/header2">
        <LinearLayout 
            android:orientation="horizontal" 
            android:id="@id/tracks" 
            android:paddingTop="4.0dip" 
            android:paddingBottom="4.0dip" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content">
            <ImageView 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:src="@drawable/fastblow_slider_grip_left" />
            <ImageView 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:src="@drawable/fastblow_slider_grip_right" />
        </LinearLayout>
    </HorizontalScrollView>
    <FrameLayout 
        android:id="@id/footer" 
        android:background="@drawable/fastblow_bottom_frame" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:layout_below="@id/scroll" />
    <ImageView android:id="@id/arrow_down" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_marginTop="-1.0dip" 
        android:src="@drawable/fastblow_arrow_down" 
        android:layout_below="@id/footer" />
</RelativeLayout>
